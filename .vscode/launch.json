    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "program": "${workspaceFolder}/myapp",
            "linux": {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "program": "${workspaceFolder}/myapp",
            },
            "osx": {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "lldb",
                "program": "${workspaceFolder}/myapp",
            },
            "windows": {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "program": "${workspaceFolder}\\myapp.exe",
                "miDebuggerPath": "c:\\cygwin64\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}